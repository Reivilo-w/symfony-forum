{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{{ post.libelle }}</h1>
        <p>{{ post.contenu }}</p>
        <small>Publié le {{ post.date|date('d/m/Y à H:i:s') }}</small>
    </div>
{% endblock %}
