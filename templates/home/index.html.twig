{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Voici la liste des catégories ✅</h1>
        <ul>
            {% for category in categories %}
                <li style="list-style-type: none;">{{ category.libelle }}</li>
                {% for topic in category.topics %}
                    <li style="margin-left: 10px;list-style-type: none;"><a
                                href="{{ url('category_list',{topicId:topic.id}) }}"> {{ topic.libelle }} {{ topic.description }}</a>
                    </li>
                {% endfor %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}
