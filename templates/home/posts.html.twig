{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Voici la liste des Posts dans la sous cat√©gorie {{ topic.libelle }}</h1>
        <ul>
            {% for post in topic.posts %}
                <li><a href="{{ url('post_view',{postId:post.id}) }}">{{ post.libelle }} : {{ post.contenu|slice(0,30) }}...</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
